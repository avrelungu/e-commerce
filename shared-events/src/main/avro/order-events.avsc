      },
      {
        "name": "shippingAddress",
        "type": "com.example.events.common.Address"
      }
    ]
  },
  {
    "namespace": "com.example.events.order",
    "type": "record",
    "name": "OrderCancelledEvent",
    "fields": [
      {
        "name": "eventId",
        "type": "string"
      },
      {
        "name": "timestamp",
        "type": "long",
        "logicalType": "timestamp-millis"
      },
      {
        "name": "orderId",
        "type": "string"
      },
      {
        "name": "reason",
        "type": "string"
      },
      {
        "name": "cancelledBy",
        "type": "string"
      },
      {
        "name": "correlationId",
        "type": "string"
      }
    ]
  }
