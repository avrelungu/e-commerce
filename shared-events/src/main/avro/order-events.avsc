    "fields": [
      {
        "name": "eventId",
        "type": "string",
        "doc": "Unique identifier for this event"
      },
      {
        "name": "timestamp",
        "type": "long",
        "logicalType": "timestamp-millis"
      },
      {
        "name": "orderId",
        "type": "string"
      },
      {
        "name": "orderNumber",
        "type": "string"
      },
      {
        "name": "customerId",
        "type": "string"
      },
      {
        "name": "items",
        "type": {
          "type": "array",
          "items": "OrderItem"
        }
      },
      {
        "name": "totalAmount",
        "type": "com.example.events.common.Money"
      },
      {
        "name": "taxAmount",
        "type": "com.example.events.common.Money"
      },
      {
        "name": "shippingAmount",
